{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "pnpm typecheck && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/src/main",
    "start:test": "NODE_ENV=test run-s migrate start",
    "test:e2e": "NODE_ENV=test pnpm cypress run",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "badges": "istanbul-badges-readme --statementsLabel='Backend Code Coverage' --logo=jest",
    "badges:ci": "pnpm badges --ci --exitCode=1",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:integration": "jest --config ./test/jest-integration.json",
    "typecheck": "tsc --noEmit -p tsconfig.json  # exists coz test/ aren't typechecked by `nest build`",
    "typeorm": "ts-node -P tsconfig.json ./node_modules/typeorm/cli.js",
    "erd": "ts-node -P tsconfig.json ./node_modules/typeorm-uml/bin/run ormconfig.ts --with-table-names-only -d erd.png --handwritten",
    "seed:users": "ts-node ./database/seeds/users.seed.ts",
    "seed": "pnpm seed:users",
    "migrate:gen": "pnpm typeorm migration:generate",
    "migrate": "pnpm typeorm migration:run",
    "deploy": "pnpm install && pnpm build && pnpm migrate && pnpm seed"
  },
  "dependencies": {
    "@nestjs/apollo": "^10.0.11",
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^2.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/graphql": "^10.0.11",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/passport": "^8.2.1",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/typeorm": "^8.0.3",
    "@swc/core": "^1.2.182",
    "@webundsoehne/nestjs-graphql-typeorm-dataloader": "^3.3.2",
    "apollo-server-express": "^3.7.0",
    "bcrypt": "^5.0.1",
    "chalk": "4.x",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "graphql": "^16.5.0",
    "lodash": "^4.17.21",
    "passport": "^0.5.2",
    "passport-google-oauth20": "^2.0.0",
    "passport-google-verify-token": "^2.2.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "typeorm": "0.2",
    "typeorm-naming-strategies": "^4.1.0"
  },
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^10.0.2",
    "@cypress/browserify-preprocessor": "^3.0.2",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@swc/jest": "^0.2.21",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.5.0",
    "@types/lodash": "^4.14.182",
    "@types/node": "^16.11.36",
    "@types/passport": "^1.0.7",
    "@types/passport-google-oauth20": "^2.0.11",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/parser": "^5.23.0",
    "better-sqlite3": "^7.5.3",
    "cypress": "^9.7.0",
    "eslint": "^8.14.0",
    "istanbul-badges-readme": "^1.8.1",
    "jest": "28.0.3",
    "jest-html-reporters": "^3.0.6",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "4.0.0",
    "typeorm-uml": "^1.6.5",
    "typescript": "^4.6.4",
    "webpack": "^5.72.0"
  }
}
