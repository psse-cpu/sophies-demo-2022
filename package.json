{
  "name": "sophies-demo-2022",
  "version": "0.0.1",
  "description": "Demo project for sophomores AY 2022 (SE-2223 + SE-2226).",
  "main": "index.js",
  "engines": {
    "node": "16.15.0"
  },
  "scripts": {
    "start:dev": "pnpm --parallel start:dev",
    "start:test": "NODE_ENV=test pnpm --parallel start:test",
    "typecheck": "pnpm --parallel --aggregate-output typecheck",
    "build": "pnpm --parallel --aggregate-output build",
    "lint": "pnpm --parallel --aggregate-output lint",
    "badges:be": "istanbul-badges-readme --coverageDir=./backend/coverage --statementsLabel='Backend Code Coverage' --logo=jest",
    "badges": "FORCE_COLOR=1 pnpm --parallel --aggregate-output badges",
    "badges:ci": "pnpm --parallel --aggregate-output badges:ci",
    "test:unit": "pnpm --color=always --parallel --aggregate-output test:cov && pnpm badges",
    "test:cov": "pnpm --parallel --aggregate-output test:cov",
    "test:integration": "pnpm --filter backend test:integration",
    "test": "run-s test:unit test:integration",
    "start:fe": "pnpm fe start:test:compiled",
    "start:be": "pnpm be start:test",
    "serve-and-test:e2e": "start-test start:be 3000 start:fe 9000 'NODE_ENV=test pnpm be test:e2e'",
    "qa": "run-p build test lint badges:ci serve-and-test:e2e",
    "typeorm": "pnpm --filter backend typeorm",
    "be": "pnpm --filter backend",
    "fe": "pnpm --filter frontend"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "@types/node": "^12.20.52",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "commitizen": "^4.2.4",
    "commitizen-emoji": "^1.0.5",
    "eslint": "^8.16.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-boundaries": "^2.9.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.3.0",
    "eslint-plugin-jsonc": "^2.3.0",
    "eslint-plugin-no-secrets": "^0.8.9",
    "eslint-plugin-unicorn": "^42.0.0",
    "eslint-plugin-vue": "^8.7.1",
    "husky": "^7.0.4",
    "istanbul-badges-readme": "^1.8.1",
    "lint-staged": "^12.4.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "start-server-and-test": "^1.14.0",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2"
  }
}
